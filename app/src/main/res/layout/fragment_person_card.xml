<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/card_children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvChildrenText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/card_parents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvParentsText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rvParents"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="@string/card_siblings_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSiblingsText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.41000003"/>
    <TextView
            android:text="@string/card_marriage_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMarriageText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41000003"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvChildrenText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:id="@+id/rvChildren"
            app:layout_constraintDimensionRatio="h,3.5:1"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/rvParents"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="11dp"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="h,3:1"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:id="@+id/rvSiblings"
            app:layout_constraintTop_toBottomOf="@+id/tvSiblingsText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="h,3:1"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:id="@+id/rvMarriage"
            app:layout_constraintTop_toBottomOf="@+id/tvMarriageText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="h,3.5:1"
            android:layout_marginTop="8dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/materialize_baseline_grid"
            android:id="@+id/cardViewPersonData">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/ivPersonAvatar"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPersonName"
                    app:layout_constraintStart_toEndOf="@+id/ivPersonAvatar"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPersonSurname"
                    app:layout_constraintStart_toStartOf="@+id/tvPersonName"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPersonName"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAvatarPerson"
                    app:layout_constraintTop_toTopOf="@+id/ivPersonAvatar"
                    app:layout_constraintBottom_toBottomOf="@+id/ivPersonAvatar"
                    app:layout_constraintStart_toStartOf="@+id/ivPersonAvatar"
                    app:layout_constraintEnd_toEndOf="@+id/ivPersonAvatar"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPersonSex"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView5"/>
            <TextView
                    android:text="@string/person_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textStyle="italic"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPersonSurname"
                    app:layout_constraintStart_toEndOf="@+id/ivPersonAvatar"
                    android:layout_marginStart="32dp"/>
            <TextView
                    android:text="@string/death_date_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDeathDateText"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>
            <TextView
                    android:text="@string/birth_date_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeathDateText"
                    app:layout_constraintEnd_toEndOf="@+id/tvDeathDateText"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDeath"
                    app:layout_constraintStart_toEndOf="@+id/tvDeathDateText"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tvDeathDateText"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBirth"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView7"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>