<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/main_fragment"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar">

    </FrameLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="86dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/bottom_nav_bar"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment" app:layout_constraintHorizontal_bias="0.5">

        <Button
                android:text="@string/trees_icon"
                android:paddingTop="@dimen/materialize_baseline_grid"
                android:paddingBottom="@dimen/materialize_baseline_grid"
                android:drawableTop="@drawable/ic_baseline_supervised_user_circle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btnTreesList" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btnUserProfile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:background="@drawable/rounded_button_filled"
                tools:text="@string/trees_icon" android:textColor="@color/colorAfter"/>
        <Button
                android:text="@string/profile_icon"
                android:paddingTop="@dimen/materialize_baseline_grid"
                android:paddingBottom="@dimen/materialize_baseline_grid"
                android:drawableTop="@drawable/ic_baseline_account_circle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btnUserProfile" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/btnTreesList" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/rounded_button_filled"
                tools:text="@string/profile_icon" android:textColor="@color/colorAfter"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>